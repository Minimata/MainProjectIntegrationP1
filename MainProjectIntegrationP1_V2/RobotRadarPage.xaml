<Page x:Class="MainProjectIntegrationP1.RobotRadarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MainProjectIntegrationP1"
      xmlns:k="http://schemas.microsoft.com/kinect/2013"
      mc:Ignorable="d" 
      d:DesignHeight="781.4" d:DesignWidth="1093"
      Title="RobotRadarPage">

    <Grid>
        <k:KinectSensorChooserUI HorizontalAlignment="Center" VerticalAlignment="Top" Name="sensorChooserUi" />
        <Label HorizontalAlignment="Center" FontSize="96" Foreground="#FF52318F" FontWeight="Bold" Margin="0,93,0,122">Connexion au robot</Label>
        <k:KinectRegion Name="kinectRegion">
            <k:KinectScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto" VerticalAlignment="Bottom" Margin="1,0,0,169" Height="322" RenderTransformOrigin="0.498,1.31">

                <StackPanel Orientation="Horizontal" Name="scrollContent" />
            </k:KinectScrollViewer>

        </k:KinectRegion>
        <Label Name="statusLbl" Margin="-4,0,0,0" Background="#FF34A400" RenderTransformOrigin="0.5,0.5" Height="43" VerticalAlignment="Bottom" FontSize="21.333" Foreground="White" FontWeight="Bold" >Prêt au pairage</Label>
    </Grid>
</Page>
